#[
    Maps Example
]#

# Example One
# Map literal with key -> value pairs.
ages = { "Jules" -> 32, "Ringo" -> 29, "Peet" -> 35 }

# Access existing entries.
echo ages["Jules"]

# Example Two
# Update values via index assignment.
ages["Ringo"] = 30
echo ages["Ringo"]

# Iterate with block parameters.
ages.each do |name, age|
    echo "#{name} is #{age}"
end

# Some builtin helpers.
e! ages.keys
e! ages.values

# Example Three
# Typed empty map (`{} as K -> V`).
empty_ages = {} as str -> int
e! empty_ages.keys
e! empty_ages.values

# Example Four
greeting = {
    "greet" -> "Hi, my name is Jalyn.",
    "from" -> " I'm from the USA!"
}

echo greeting["greet"] + greeting["from"]

# Example Five
# This is adding the `Hash` to a `Map` and adds types.
person: Hash(str, int) = {
    "name" -> "Jalyn",
    "age" -> 30
}

echo person["name"]                                             # -> Jalyn
echo person["age"]                                              # -> 30
