#[
    Retry Example
]#

attempts = 0

begin
    attempts += 1
    echo "Attempt #{attempts}"
    if attempts < 3
        raise "Something went wrong!"
    end
rescue
    echo "Caught an exception. Retrying..."
    # Limit retries to 5 attempts, needs
    # specified or will be infinite loop.
    if attempts < 5
        retry
    end
end

echo "Operation completed or maximum retries reached."
