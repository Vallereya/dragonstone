# method with dynamic parameters and return type
def greet(name)
    echo "Hello, #{name}!"
end
greet("V")

# Union type example (an argument can be a String or Nil)
def greet(country: str | nil) -> str
    if country.nil?
        echo "Ahhh, I don't know where I'm from!"
    else
        echo "Hello, I'm from #{country}!"
    end
end

greet(nil)
greet("Portugal")

