#[
    String Strip Example
]#

def strip(str: str) -> str
    start_index = 0
    end_index = str.size - 1

    if end_index < 0
        return ""
    end

    while start_index <= end_index
        char = str[start_index]

        if char == " " || char == "\t" || char == "\n" || char == "\r"
            start_index = start_index + 1
        else
            break
        end
    end

    while end_index >= start_index
        char = str[end_index]

        if char == " " || char == "\t" || char == "\n" || char == "\r"
            end_index = end_index - 1
        else
            break
        end
    end

    if start_index > end_index
        return ""
    end

    str.slice(start_index..end_index)
end


echo "--- Basic Usage ---"
text = "   Dragonstone   "
echo "Original: '#{text}'"
echo "Stripped: '#{strip(text)}'"

echo "\n--- Tabs and Newlines ---"
complex = "\t\tIndented Line\n"
echo "Raw:      '#{complex}'"
echo "Stripped: '#{strip(complex)}'"

echo "\n--- Edge Cases ---"
only_space = "     "
echo "Spaces:   '#{only_space}' -> '#{strip(only_space)}'"

# Already clean string
clean = "Clean"
echo "Clean:    '#{clean}' -> '#{strip(clean)}'"
# Empty string
empty = ""
echo "Empty:    '#{empty}' -> '#{strip(empty)}'"